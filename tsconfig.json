{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": true,
    "resolveJsonModule": true,
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "sourceMap": true,
    "strict": true,
    "target": "es2018",
    "types": ["jest", "node"]
  },
  "exclude": ["node_modules", "**/*.test.ts"],
  "include": ["./src"]
}
